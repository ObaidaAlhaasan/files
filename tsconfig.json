{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "paths": {
      // Aliases
      "common": ["core/common"],
      "common/*": ["core/common/*"],
      "@domain": ["core/@domain"],
      "@domain/*": ["core/@domain/*"],
      "application": ["core/application"],
      "application/*": ["core/application/*"]
    }
  },
  "include": ["src/**/*", "build/**/*"]
}
